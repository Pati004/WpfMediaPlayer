<Window x:Class="MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Multimedijski Predvajalnik" 
        Height="650" 
        Width="1100"
        MinHeight="550"
        MinWidth="900"
        Background="{StaticResource BackgroundGradient}"
        WindowStartupLocation="CenterScreen">

    <DockPanel LastChildFill="True">

        <!-- MENI -->
        <Menu DockPanel.Dock="Top" Style="{StaticResource MainMenuStyle}">
            <MenuItem Header="_Datoteka" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Izhod" Click="MenuItem_Izhod_Click"/>
            </MenuItem>

            <MenuItem Header="_Seznam" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="Dodaj _statično"/>
                <MenuItem Header="Uredi s_tatično"/>
                <Separator/>
                <MenuItem Header="_Dodaj"/>
                <MenuItem Header="_Uredi"/>
                <MenuItem Header="_Odstrani"/>
            </MenuItem>
        </Menu>

        <!-- KONTROLNI PANEL - FIKSNA VIŠINA -->
        <Grid DockPanel.Dock="Bottom" 
              Style="{StaticResource ControlPanelStyle}"
              Height="150">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- Slider + čas -->
                <RowDefinition Height="60"/>
                <!-- Gumbi -->
                <RowDefinition Height="40"/>
                <!-- Ime vsebine -->
            </Grid.RowDefinitions>

            <!-- ROW 0: SLIDER + ČAS -->
            <StackPanel Grid.Row="0" Margin="20,10,20,5" VerticalAlignment="Center">
                <Slider x:Name="positionSlider" 
                        Style="{StaticResource CustomSliderStyle}"
                        Height="8"
                        Minimum="0" 
                        Maximum="100" 
                        Value="0"
                        ValueChanged="PositionSlider_ValueChanged"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,5,0,0">
                    <Label x:Name="currentTimeLabel" 
                           Content="00:00:00" 
                           Style="{StaticResource TimeLabelStyle}"
                           FontSize="11"
                           Padding="2"/>
                    <Label Content=" / " 
                           Style="{StaticResource TimeSecondaryLabelStyle}"
                           FontSize="11"
                           Padding="2"/>
                    <Label x:Name="totalTimeLabel" 
                           Content="00:00:00" 
                           Style="{StaticResource TimeSecondaryLabelStyle}"
                           FontSize="11"
                           Padding="2"/>
                </StackPanel>
            </StackPanel>

            <!-- ROW 1: GUMBI -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">

                <Button x:Name="shuffleButton" 
                        Style="{StaticResource ToggleButtonStyle}"
                        Tag="False"
                        Width="45" Height="45"
                        Margin="5"
                        ToolTip="Naključno"
                        Click="ShuffleButton_Click">
                    <Image Source="Icons/shuffle.png" 
                           Width="24" Height="24"
                           Stretch="Uniform"/>
                </Button>

                <Button x:Name="previousButton" 
                        Style="{StaticResource ControlButtonStyle}"
                        Width="45" Height="45"
                        Margin="5"
                        ToolTip="Prejšnji"
                        Click="PreviousButton_Click">
                    <Image Source="Icons/previous.png" 
                           Width="24" Height="24"
                           Stretch="Uniform"/>
                </Button>

                <Button x:Name="playPauseButton" 
                        Style="{StaticResource PlayButtonStyle}"
                        Width="60" Height="60"
                        Margin="8,5"
                        ToolTip="Predvajaj/Pavza"
                        Click="PlayPauseButton_Click">
                    <Image x:Name="playPauseImage" 
                           Source="Icons/play.png" 
                           Width="32" Height="32"
                           Stretch="Uniform"/>
                </Button>

                <Button x:Name="stopButton" 
                        Style="{StaticResource ControlButtonStyle}"
                        Width="45" Height="45"
                        Margin="5"
                        ToolTip="Ustavi"
                        Click="StopButton_Click">
                    <Image Source="Icons/stop.png" 
                           Width="24" Height="24"
                           Stretch="Uniform"/>
                </Button>

                <Button x:Name="nextButton" 
                        Style="{StaticResource ControlButtonStyle}"
                        Width="45" Height="45"
                        Margin="5"
                        ToolTip="Naslednji"
                        Click="NextButton_Click">
                    <Image Source="Icons/next.png" 
                           Width="24" Height="24"
                           Stretch="Uniform"/>
                </Button>

                <Button x:Name="repeatButton" 
                        Style="{StaticResource ToggleButtonStyle}"
                        Tag="False"
                        Width="45" Height="45"
                        Margin="5"
                        ToolTip="Ponavljaj"
                        Click="RepeatButton_Click">
                    <Image Source="Icons/repeat.png" 
                           Width="24" Height="24"
                           Stretch="Uniform"/>
                </Button>
            </StackPanel>

            <!-- ROW 2: IME VSEBINE -->
            <TextBox Grid.Row="2" 
                     x:Name="currentMediaTextBox"
                     Text="Ni izbrane vsebine" 
                     Style="{StaticResource CurrentMediaTextBoxStyle}"
                     FontSize="13"
                     VerticalAlignment="Center"
                     Margin="15,5,15,5"/>
        </Grid>

        <!-- GLAVNI VSEBINSKI DEL -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" MinWidth="500"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- MEDIAELEMENT -->
            <Border Grid.Column="0" 
                    Style="{StaticResource MediaContainerStyle}">
                <MediaElement x:Name="mediaPlayer"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Stop"
                              Stretch="Uniform"
                              ScrubbingEnabled="True"
                              Volume="0.5"/>
            </Border>

            <!-- GRIDSPLITTER -->
            <GridSplitter Grid.Column="1" 
                          Style="{StaticResource CustomGridSplitterStyle}"/>

            <!-- PLAYLIST Z DATATTEMPLATE -->
            <Border Grid.Column="2" 
                    Style="{StaticResource PlaylistContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Style="{StaticResource PlaylistHeaderStyle}">
                        <Label Content="SEZNAM PREDVAJANJA" 
                               Style="{StaticResource HeaderLabelStyle}"/>
                    </Border>

                    <!-- LISTVIEW Z DATATEMPLATE IN DATATRIGGER -->
                    <ListView Grid.Row="1"
                              x:Name="playlistView"
                              Style="{StaticResource PlaylistViewStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              MouseDoubleClick="PlaylistView_MouseDoubleClick"
                              MouseRightButtonUp="PlaylistView_MouseRightButtonUp"
                              SelectionMode="Single">

                        <!-- DATATEMPLATE za prikaz elementov -->
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <!-- Border za celoten element -->
                                <Border x:Name="ItemBorder"
                                        Background="#F5F5F5"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="10"
                                        Margin="5">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <!-- Slika -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Podatki -->
                                        </Grid.ColumnDefinitions>

                                        <!-- SLIKA -->
                                        <Image Grid.Column="0"
                                               Source="{Binding ThumbnailPath}"
                                               Width="70"
                                               Height="70"
                                               Stretch="UniformToFill"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                            <Image.Clip>
                                                <RectangleGeometry Rect="0,0,70,70" RadiusX="5" RadiusY="5"/>
                                            </Image.Clip>
                                        </Image>

                                        <!-- PODATKI -->
                                        <StackPanel Grid.Column="1"
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center">

                                            <!-- NASLOV -->
                                            <TextBlock x:Name="TitleText"
                                                       Text="{Binding Title}"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="#191414"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Title}"/>

                                            <!-- IZVAJALEC -->
                                            <TextBlock Text="{Binding Artist}"
                                                       FontSize="12"
                                                       Foreground="#666666"
                                                       Margin="0,2,0,0"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Artist}"/>

                                            <!-- ŽANR -->
                                            <TextBlock FontSize="11"
                                                       Foreground="#888888"
                                                       Margin="0,2,0,0">
                                                <Run Text="Žanr: "/>
                                                <Run Text="{Binding Genre}"/>
                                            </TextBlock>

                                            <!-- TRAJANJE -->
                                            <TextBlock FontSize="11"
                                                       Foreground="#888888"
                                                       Margin="0,2,0,0">
                                                <Run Text="Trajanje: "/>
                                                <Run Text="{Binding Duration}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>

                                    <!-- DATATRIGGER za označevanje predvajanega elementa -->
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                    <!-- Spremeni ozadje -->
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <!-- Spremeni obrobo -->
                                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!-- Dodatni DataTrigger za naslov (alternativno označevanje) -->
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter TargetName="TitleText" Property="Foreground" Value="#2E7D32"/>
                                        <Setter TargetName="TitleText" Property="FontWeight" Value="ExtraBold"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <!-- Stil za vsak ListViewItem -->
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

    </DockPanel>
</Window>
