<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================== -->
    <!-- BARVNE DEFINICIJE - MODERNA TEMNA TEMA -->
    <!-- ================================================== -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#6C5DD3"/>
    <!-- Vijolična - glavni akcent -->
    <SolidColorBrush x:Key="SecondaryColor" Color="#8B7BE8"/>
    <!-- Svetlejša vijolična -->
    <SolidColorBrush x:Key="AccentColor" Color="#FF6B9D"/>
    <!-- Rožnata za poudarke -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#1A1A2E"/>
    <!-- Temno modro ozadje -->
    <SolidColorBrush x:Key="SurfaceColor" Color="#16213E"/>
    <!-- Temna površina -->
    <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
    <!-- Bela -->
    <SolidColorBrush x:Key="TextSecondaryColor" Color="#B8B8D1"/>
    <!-- Svetlo siva -->
    <SolidColorBrush x:Key="BorderColor" Color="#2D3561"/>
    <!-- Temno modra obroba -->
    <SolidColorBrush x:Key="SuccessColor" Color="#06D6A0"/>
    <!-- Mint zelena -->
    <SolidColorBrush x:Key="WarningColor" Color="#FF9F1C"/>
    <!-- Oranžna -->
    <SolidColorBrush x:Key="HoverColor" Color="#8B7BE8"/>
    <!-- Svetlo vijolična -->

    <!-- Gradient ozadja - temna eleganca -->
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0F1626" Offset="0"/>
        <!-- Zelo temno modra -->
        <GradientStop Color="#1A1A2E" Offset="1"/>
        <!-- Temno modra -->
    </LinearGradientBrush>

    <!-- ================================================== -->
    <!-- OSNOVNI STIL ZA GUMBE -->
    <!-- ================================================== -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#6C5DD3"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#6C5DD3" 
                                                  BlurRadius="0" 
                                                  ShadowDepth="0" 
                                                  Opacity="0"/>
                            </Border.Effect>
                        </Border>
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" 
                                    Value="#8B7BE8"/>
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#6C5DD3" Opacity="0.15"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#6C5DD3" 
                                                      BlurRadius="15" 
                                                      ShadowDepth="0" 
                                                      Opacity="0.6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#6C5DD3" Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================== -->
    <!-- KONTROLNI GUMB -->
    <!-- ================================================== -->
    <Style x:Key="ControlButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Width" Value="45"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="8"/>
    </Style>

    <!-- ================================================== -->
    <!-- GLAVNI PLAY GUMB -->
    <!-- ================================================== -->
    <Style x:Key="PlayButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Margin" Value="8,5"/>
        <Setter Property="BorderThickness" Value="3"/>
    </Style>

    <!-- ================================================== -->
    <!-- TOGGLE GUMB -->
    <!-- ================================================== -->
    <Style x:Key="ToggleButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
        <Setter Property="Opacity" Value="0.5"/>
        <Style.Triggers>
            <Trigger Property="Tag" Value="True">
                <Setter Property="Opacity" Value="1.0"/>
                <Setter Property="BorderBrush" Value="#FF6B9D"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF6B9D" Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ================================================== -->
    <!-- STIL ZA MENI -->
    <!-- ================================================== -->
    <Style x:Key="MainMenuStyle" TargetType="Menu">
        <Setter Property="Background" Value="#FFFFFF"/>
        <!-- Belo ozadje -->
        <Setter Property="Foreground" Value="#6C5DD3"/>
        <!-- Vijolično besedilo -->
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style x:Key="MenuItemStyle" TargetType="MenuItem">
        <Setter Property="Foreground" Value="#6C5DD3"/>
        <!-- Vijolično besedilo -->
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,5"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="#F0EDFF"/>
                <!-- Svetlo vijolično ozadje -->
                <Setter Property="Foreground" Value="#6C5DD3"/>
            </Trigger>
            <Trigger Property="IsSubmenuOpen" Value="True">
                <Setter Property="Background" Value="#F0EDFF"/>
                <Setter Property="Foreground" Value="#6C5DD3"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- ================================================== -->
    <!-- STIL ZA SLIDER -->
    <!-- ================================================== -->
    <Style x:Key="CustomSliderStyle" TargetType="Slider">
        <Setter Property="Height" Value="8"/>
        <Setter Property="Background" Value="#2D3561"/>
        <Setter Property="Foreground" Value="#6C5DD3"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- ================================================== -->
    <!-- STIL ZA LABEL -->
    <!-- ================================================== -->
    <Style x:Key="TimeLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="TimeSecondaryLabelStyle" TargetType="Label" BasedOn="{StaticResource TimeLabelStyle}">
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="#B8B8D1"/>
    </Style>

    <Style x:Key="HeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- ================================================== -->
    <!-- STIL ZA TEXTBOX -->
    <!-- ================================================== -->
    <Style x:Key="CurrentMediaTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10,5"/>
    </Style>

    <!-- ================================================== -->
    <!-- STIL ZA LISTVIEW -->
    <!-- ================================================== -->
    <Style x:Key="PlaylistViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="#16213E"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Foreground" Value="#B8B8D1"/>
        <!-- Svetlo vijolično siva -->
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <Style x:Key="PlaylistItemStyle" TargetType="ListViewItem">
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="Margin" Value="2,1"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#B8B8D1"/>
        <!-- Svetlo vijolično siva -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#2D3561"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <!-- Bela na hover -->
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#6C5DD3"/>
                <!-- Vijolična -->
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <!-- Bela -->
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- STIL ZA LISTVIEW HEADER -->
    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="#1A1A2E"/>
        <Setter Property="Foreground" Value="#8B7BE8"/>
        <!-- Svetlo vijolična -->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="BorderBrush" Value="#2D3561"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <!-- ================================================== -->
    <!-- STIL ZA BORDER -->
    <!-- ================================================== -->
    <Style x:Key="MediaContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#000000"/>
        <Setter Property="BorderBrush" Value="#2D3561"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" 
                                  Direction="270" 
                                  ShadowDepth="5" 
                                  BlurRadius="15" 
                                  Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#6C5DD3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PlaylistContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#16213E"/>
        <Setter Property="BorderBrush" Value="#2D3561"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" 
                                  Direction="270" 
                                  ShadowDepth="5" 
                                  BlurRadius="15" 
                                  Opacity="0.4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PlaylistHeaderStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#6C5DD3" Offset="0"/>
                    <GradientStop Color="#8B7BE8" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="CornerRadius" Value="12,12,0,0"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <!-- ================================================== -->
    <!-- STIL ZA KONTROLNI PANEL -->
    <!-- ================================================== -->
    <Style x:Key="ControlPanelStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#16213E" Offset="0"/>
                    <GradientStop Color="#0F1626" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================== -->
    <!-- STIL ZA GRIDSPLITTER -->
    <!-- ================================================== -->
    <Style x:Key="CustomGridSplitterStyle" TargetType="GridSplitter">
        <Setter Property="Width" Value="5"/>
        <Setter Property="Background" Value="#2D3561"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="ShowsPreview" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#6C5DD3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>